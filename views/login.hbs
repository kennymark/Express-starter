{{#if error}}
  <div class="app-alert alert alert-danger" role="alert">
    {{error}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/if}}


<div class="container mt-header">
  <div class="loginform">
    <form class="form-signin" method="POST" action='/user/login'>
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" name='email' class="form-control" placeholder="Email address" required autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Password" required>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="true" name='rememberme'> Remember me
        </label>
        <a href="/forgotten-password" class="form-text text-muted">Forgotten password
        </a>
      </div>
      <button class="btn btn-primary btn-block" type="submit">Sign in</button>

      <a href="/user/login/twitter">
        <button class="btn  twitter mt-2 btn-block" type="button">Twitter
          <ion-icon name="logo-twitter"></ion-icon>
        </button>
      </a>
      <a href="/user/login/google">
        <button class="btn google mt-2 btn-block" type="button">Google
          <ion-icon name="logo-googleplus"></ion-icon>
        </button>
      </a>
      <a href="/user/login/facebook">
        <button class="btn fb mt-2 btn-block" type="button">Facebook
          <ion-icon name="logo-facebook"></ion-icon>
        </button>
      </a>
      <a href="/user/login/github">
        <button class="btn github mt-2 btn-block" type="button">Github
          <ion-icon name="logo-github"></ion-icon>
        </button>
      </a>
    </form>
  </div>

</div>