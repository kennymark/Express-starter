{{#if error}}
<div class="app-alert alert alert-danger" role="alert">
  {{error}}
</div>
{{/if}}


<div class="container mt-header">
  <div class="loginform">
    <form class="form-signin" method="POST" action='/user/login'>
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" name='email' class="form-control" placeholder="Email address" required autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Password" required>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="true" name='rememberme'> Remember me
        </label>
        <a href="/forgotten-password" class="form-text text-muted">Forgotten password
        </a>
      </div>
      <button class="btn btn-primary btn-block" type="submit">Sign in</button>

      <a href="/user/login/twitter">
        <button class="btn btn-primary mt-2 btn-block" type="button">Twitter</button>
      </a>
      <a href="/user/login/google">
        <button class="btn btn-primary mt-2 btn-block" type="button">Google</button>
      </a>
    </form>
  </div>

</div>