{{>flash}}


<div class="container mt-header">

  <div class="center mx-auto">
    <form method="POST" action="/account/register" method="POST">
      <h1 class="h3 mb-3 font-weight-normal">Please signup here</h1>

      <div class="form-group">
        <label for="name" class="text-muted">Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter name" class="py-3" id="name">
      </div>

      <div class="form-group">
        <label for="email" class="text-muted">Email address</label>
        <input type="email" class="form-control" name="email" placeholder="Enter email" class="p-3" id="email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else
        </small>
      </div>

      <div class="form-group">
        <label for="password" class="text-muted">Password</label>
        <input type="password" class="form-control" name="password" placeholder="Password" id="password">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  </div>
</div>