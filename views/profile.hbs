{{#if person}}
<div class="container-small">
  <h1 class="title-3">{{date}}</h1>
  <div class="row">
    <h1 class="title-3">{{title}}</h1>
    <div class="col">
      <p>Welcome {{person.name}}</p>
      <form>

        <div class="form-group row">
          <label for="staticEmail" class="col-sm-4 col-form-label">Name</label>
          <div class="col">
            <input type="text" class="form-control-plaintext" value={{person.name}}>
          </div>
        </div>

        <div class="form-group row">
          <label for="staticEmail" class="col-sm-4 col-form-label">Email</label>
          <div class="col">
            <input type="text" class="form-control-plaintext" value={{person.email}}>
          </div>
        </div>

        <div class="form-group row">
          <label for="inputPassword" class="col-sm-4 col-form-label">Password</label>
          <div class="col">
            <input type="password" class="form-control" id="inputPassword" placeholder="Password">
          </div>
        </div>

        <div class="form-group row">
          <label for="staticEmail" class="col-sm-4 col-form-label">Account Created on</label>
          <div class="col">
            <input type="text" readonly class="form-control-plaintext" value="{{person.created_at}}">
          </div>
        </div>

        <div class="form-group row">
          <label for="staticEmail" class="col-sm-4 col-form-label">Last updated on</label>
          <div class="col">
            <input type="text" readonly class="form-control-plaintext" value="{{person.updated_at}}">
          </div>
        </div>
        <div class="btn btn-primary">Save</div>
      </form>
    </div>


    <div class="col">
      <h3>Account Details</h3>

      <p>Do you wish to freeze your account</p>
      <small id="emailHelp" class="form-text text-muted">Once frozen, your account won't be available to search engines
        or other users
      </small>
      <button class="btn btn-danger">
        Freeze
      </button>

      <p>Do you wish to delete your account</p>
      <button class="btn btn-danger">
        Delete
      </button>
    </div>
  </div>
</div>
{{/if}}

{{#unless person}}
<div class="container-small">
  <h1 class="title-3">You need to login to view your profile</h1>
  <a href="/user/login">
    <button class="btn btn-primary">
      Login
    </button>
  </a>
</div>
{{/unless}}